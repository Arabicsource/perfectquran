%section.section
  .container
    .columns
      .column.is-one-fifth
        = render 'admin/shared/menu'

      .column
        %header
          %h1.title= @article.title

        %section
          .content
            = sanitize @article.content

      .column.is-one-fifth
        %nav.menu.has-text-right
          %ul.menu-list
            %li
              = link_to admin_articles_path do
                %span List
                %span.icon= fa_icon 'list'
            %li
              = link_to new_admin_article_path do
                %span New
                %span.icon= fa_icon 'plus'
            %li
              = link_to edit_admin_article_path @article do
                %span Edit
                %span.icon= fa_icon 'edit'
            %li
              = link_to admin_article_path(@article), method: :delete, class: 'has-text-danger' do
                %span Delete
                %span.icon= fa_icon 'trash'

- provide :title, @article.title