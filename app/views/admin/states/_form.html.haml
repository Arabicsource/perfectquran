= form_with model: [:admin, @resource], id: 'form' do |f|
  
  = render 'shared/error_messages', object: @resource

  .field
    .columns
      .column
        = f.label :name, class: 'label'
        .control
          = f.text_field :name, autofocus: true, class: 'input', id: 'state_name'

      .column
        = f.label :code, 'Code', class: 'label'
        .control
          = f.text_field :code, class: 'input', id: 'state_code'

      .column
        = f.label :country_id, 'Country', class: 'label'
        .control
          .select.is-fullwidth
            = f.select :country_id, Country.all.collect {|c| [ c.name, c.id ] }, {}, id: 'state_country_id'

  .field
    .control
      = f.submit nil, class: 'button is-primary'