= render 'admin/partials/tabs', action: 'index'

%table#articles.table.is-fullwidth
  %tbody
    %tr
      %th #
      %th Name
      %th Description
  %tfoot
    %tr
      %th #
      %th Name
      %th Descrption
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.id
        %td= link_to category.name, admin_category_path(category)
        %td= category.description

- provide :title, t('admin.categories.index.title')

- content_for :after_header do
  = render 'admin/partials/navbar'