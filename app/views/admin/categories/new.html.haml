.navbar.is-dark
  .container
    .navbar-end
      .navbar-item
        .field.is-grouped
          %p.control
            = link_to admin_categories_path, class: 'button' do
              %span.icon= fa_icon 'th-list'
              %span Categories Index

%section.section
  .container
    %header
      %h1.title New Category

    %section.box
      = form_with scope: :category, url: admin_categories_path, id: 'new_category' do |f|
        = render 'form_fields', f: f

- provide :title, 'New Category'