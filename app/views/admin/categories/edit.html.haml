.navbar.is-dark
  .container
    .navbar-end
      .navbar-item
        .field.is-grouped
          %p.control
            = link_to admin_categories_path, class: 'button' do
              %span.icon= fa_icon 'th-list'
              %span Categories Index

          %p.control
            = link_to new_admin_category_path, class: 'button' do
              %span.icon= fa_icon 'pencil'
              %span Create New Category

          %p.control
            = link_to admin_category_path(@category), class: 'button is-success' do
              %span.icon= fa_icon 'eye'
              %span Show Category

          %p.control
            = link_to admin_category_path(@category), method: :delete, class: 'button is-danger' do
              %span.icon= fa_icon 'trash'
              %span Delete Category

%section.section
  .container
    %header
      %h1.title Edit Category

    %section.box
      = form_with scope: :category, url: admin_category_path(@category), method: :patch, id: 'edit_category' do |f|
        = render 'form_fields', f: f

- provide :title, 'Edit Category'