%li
  = link_to admin_categories_path do
    %span.icon.is-small= fa_icon 'th-list'
    %span Index
%li
  = link_to new_admin_category_path do
    %span.icon.is-small= fa_icon 'plus'
    %span New
%li
  = link_to edit_admin_category_path(@category) do
    %span.icon.is-small= fa_icon 'edit'
    %span Edit
%li
  = link_to admin_category_path(@category), method: :delete, data: { confirm: 'Are you sure you want to delete this resource? It cannot be undone.'} do
    %span.icon.is-small= fa_icon 'trash'
    %span Delete