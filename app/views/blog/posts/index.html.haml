- @posts.order('created_at DESC').each do |post|
  %article.post
    %h2
      = post.title
    
    %p.post-meta
      %small
        = "Posted in #{post.category.name}."
        = "By #{post.user.name}"
        = "on #{post.created_at.to_date.to_formatted_s(:short_ordinal)}."
    
    .post-content
      = markdown post.content

- provide :title, 'Blog'

- content_for :aside do
  %section
    %h4 Categories
    %ul.nav
      - Category.all.each do |category|
        %li= link_to category.name, blog_category_path(category), class: 'nav-link'