.hero.is-light.is-small
  .hero-body
    .container
      %h1.title Register

%section#main.section
  .container
    .columns
      .column.is-two-thirds
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "registration-form"}) do |f|
          = devise_error_messages!
      
          .field
            = f.label :name, class: 'label'
            .control
              = f.text_field :name, autofocus: true, class: 'input'
      
          .field
            = f.label :username, class: 'label'
            .control
              = f.text_field :username, class: 'input'
      
          .field
            = f.label :email, class: 'label'
            .control
              = f.email_field :email, class: 'input'
      
          .field
            = f.label :password, class: 'label'
            .control
              = f.password_field :password, autocomplete: "off", class: 'input'
            %p.help= "Password (#{@minimum_password_length} characters minimum)"
      
          .field
            = f.label :password_confirmation, class: 'label'
            .control
              = f.password_field :password_confirmation, autocomplete: "off", class: 'input'
          
          .field
            = f.submit "Register", class: "button"
      .column
        = render "devise/shared/links"

- provide :title, 'Register'