%nav.navbar.is-light.toolbar
  .container
    .navbar-menu
      .navbar-start
        = link_to 'Index', quran_root_path, class: 'navbar-item'
        = link_to @surah, quran_surah_path(@surah), class: 'navbar-item is-active'

      .navbar-end
        = link_to quran_surah_path(@surah.previous), class: 'navbar-item' do
          %span.icon= fa_icon 'chevron-left '
          %span Previous

        = link_to quran_surah_path(@surah.next), class: 'navbar-item' do
          %span Next
          %span.icon= fa_icon 'chevron-right'

        .navbar-item
          %audio{controls: true}
            %source{src: surah_audio_file(@surah.id), type: "audio/mpeg"}
              Your browser does not support the audio tag.