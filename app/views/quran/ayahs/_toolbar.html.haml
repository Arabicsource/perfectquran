%section.section.is-small.is-white.is-hidden-touch
  .container
    .columns
      .column
        .field
          - if account_signed_in?
            - if memorized? @ayah, current_account
              = render 'quran/ayahs/memories/delete_memory'
            - else
              = render 'quran/ayahs/memories/create_memory'

            - if bookmarked? @ayah
              = render 'quran/ayahs/bookmarks/delete_button'
            - else
              = render 'quran/ayahs/bookmarks/create_button'
      .column
        .buttons.is-right
          - if @ayah.previous?
            = link_to 'Previous', quran_ayah_path(@ayah.previous), class: 'button is-orange'
          - if @ayah.next?
            = link_to 'Next', quran_ayah_path(@ayah.next), class: 'button is-orange'
      .column.is-half
        = render 'quran/ayahs/audio'