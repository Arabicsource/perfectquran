%nav.navbar.is-white.is-fixed-bottom.is-hidden-desktop{data: {controller: 'navbar'}}
  %audio.is-hidden{controls: true, data: {target: 'navbar.audio'}}
    %source{src: ayah_audio_file(@ayah.surah.id, @ayah.number), type: "audio/mpeg"}
      Your browser does not support the audio tag.

  .navbar-brand
    = link_to '', class: 'navbar-item', data: { action: 'navbar#hideAudio'} do
      = fa_icon 'headphones'

    = link_to study_surah_path(@ayah.surah), class: 'navbar-item' do
      = fa_icon 'list-ol'

    = link_to quran_ayah_path(@ayah.previous), class: 'navbar-item' do
      = fa_icon 'chevron-left'

    = link_to quran_ayah_path(@ayah.next), class: 'navbar-item' do
      = fa_icon 'chevron-right'