.ayah{data: {target: 'tabs.tabbable'}}
  .media
    .media-left
      %p.field
        = render 'quran/ayahs/partials/memory_button', ayah: @ayah
      %p.field
        = render 'quran/ayahs/partials/bookmark_button', ayah: @ayah

    .media-content
      .content
        - @ayah.texts_and_included_translations.each do |text|
          %p.has-text-orange-dark{class: ('is-hidden' if text.uthmani?)}= text.translation.name
          %p{class: ('is-size-4 has-text-right' if text.uthmani?)}= sanitize text.content

.info.is-hidden{data: {target: 'tabs.tabbable'}}
  %p.field
    = render 'quran/ayahs/tags/tags'
  %br
  %p.field
    = render 'quran/surahs/partials/information', surah: @ayah.surah

- provide :title, @ayah

- content_for :aside do
  %p.field
    .box
      = render 'quran/ayahs/tags/tags'
  %p.field
    .box
      = render 'quran/surahs/partials/information', surah: @ayah.surah

- content_for :top do
  .tabs.is-toggle.is-toggle-rounded.is-fullwidth.is-small.is-hidden-desktop
    %ul
      %li.is-active{data: {target: 'tabs.tab'}}
        = link_to 'Ayah', '#', data: {action: 'tabs#toggle'}
      %li{data: {target: 'tabs.tab'}}
        = link_to 'Info', '#', data: {action: 'tabs#toggle'}

= render 'quran/ayahs/partials/bottom_navbar'