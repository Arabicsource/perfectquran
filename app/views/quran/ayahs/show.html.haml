- content_for :header do
  = render 'quran/ayahs/breadcrumb'
  = render 'quran/ayahs/toolbar'

- content_for :main do
  %article#ayah.content
    .is-hidden-desktop
      .level
        = render 'pagination'
      .level
        - if account_signed_in?
          - if memorized? @ayah, current_account
            = render 'quran/ayahs/memories/delete_memory'
          - else
            = render 'quran/ayahs/memories/create_memory'

          - if bookmarked? @ayah
            = render 'quran/ayahs/bookmarks/delete_button'
          - else
            = render 'quran/ayahs/bookmarks/create_button'
      .level
        = render 'quran/ayahs/audio'
    
    .is-hidden-touch
      = render 'previous'
  
    .level
      = render 'current'
  
    .is-hidden-touch
      = render 'next'

- content_for :aside do
  = render 'quran/ayahs/tags/tags'
  = render 'quran/surahs/information', surah: @ayah.surah

= render "layouts/templates/is_two_thirds", title: @ayah