%nav.navbar.is-transparent{ role: 'navigation', aria: { label: 'main navigation'} }
  .container
    .navbar-brand
      = link_to 'PerfectQuran', root_url, class: 'navbar-item'

      %button.button.navbar-burger{ data: { toggle: true } }
        %span
        %span
        %span

    .navbar-menu#navbar-menu
      .navbar-start
        = link_to 'Blog', content_articles_path, class: 'navbar-item'
        = link_to 'About', content_article_path('about'), class: 'navbar-item'        
      .navbar-end
        - if account_signed_in?
          .navbar-item.has-dropdown.is-hoverable
            = link_to '#', class: 'navbar-link' do
              = current_account.reload.try(:name) || current_account.email
            .navbar-dropdown
              = link_to 'Admin', admin_root_path, class: 'navbar-item' if current_account.role?(:admin)
              = link_to 'Settings', edit_settings_profile_path, class: 'navbar-item'
              = link_to "Logout", destroy_account_session_path, method: :delete, class: 'navbar-item'
        - else
          = link_to 'Login', new_account_session_path, class: 'navbar-item'
          = link_to 'Register', new_account_registration_path, class: 'navbar-item'