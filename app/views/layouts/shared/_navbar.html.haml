%nav.navbar.is-transparent{ role: 'navigation', aria: { label: 'main navigation'} }
  .container
    .navbar-brand
      = link_to 'PerfectQuran', root_url, class: 'navbar-item'

      %button.button.navbar-burger{ data: { target: 'navbar-menu' } }
        %span
        %span
        %span

    .navbar-menu#navbar-menu
      .navbar-end
        - if user_signed_in?
          .navbar-item.has-dropdown.is-hoverable
            = link_to '#', class: 'navbar-link' do
              = current_user.name
            .navbar-dropdown
              = link_to 'Manage', manage_root_path, class: 'navbar-item' if current_user.role?(:admin)
              = link_to "Logout", destroy_user_session_path, method: :delete, class: 'navbar-item'
        - else
          = link_to 'Login', new_user_session_path, class: 'navbar-item'
          = link_to 'Register', new_user_registration_path, class: 'navbar-item'