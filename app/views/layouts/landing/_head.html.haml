%head
  %meta{ charset: 'utf-8' }
  %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no' }
  %title= page_title(yield(:title))
  = csrf_meta_tags
  = tag :meta, name: "stripe-key", content: Rails.application.secrets.stripe_public_key
  = stylesheet_link_tag 'landing', media: 'all', data: { turbolinks_track: 'reload' }
  = javascript_include_tag 'https://js.stripe.com/v3/'
  = javascript_include_tag 'application', data: { turbolinks_track: 'reload' }
  = javascript_pack_tag 'application'
  = render '/layouts/shared/analytics'