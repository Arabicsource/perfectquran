!!!5
%html{ html_attrs('en') }
  = render 'layouts/shared/head'
  %body{id: params[:controller].try(:gsub, '/', '-'), class: params[:action] }
    = render 'layouts/partials/header'
    
    %div{data: { controller: 'tabs'}}
      = yield(:top) if content_for? :top
      = render('layouts/partials/page_header') if content_for :title

      %section.section.is-white.is-large
        .container
          = yield(:toolbar) if content_for :toolbar
          .columns
            - if content_for :aside
              .column.is-two-thirds
                = yield
              .column.is-hidden-touch
                = yield :aside
            - else
              .column
                = yield

      - if content_for? :bottom
        %section.section
          = yield :bottom

      - unless account_signed_in?
        = render 'layouts/shared/cookie_notification'

      = render 'layouts/partials/footer'