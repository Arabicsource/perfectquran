!!!5
%html{ html_attrs('en') }
  = render 'layouts/shared/head'
  
  %body{id: params[:controller].gsub('/', '-'), class: params[:action] }
    = render '/layouts/shared/analytics'
    = render 'layouts/shared/navbar'

    .container
      = render 'layouts/shared/flash'
      
      .row
        #content.col-lg-8.mr-lg-auto
          = yield
          
        .col-lg-4        
          = render 'layouts/shared/aside'
        
          %footer
            = render 'layouts/shared/footer'