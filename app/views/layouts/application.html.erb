<!DOCTYPE html>
<html>
  <head>
    <title>Perfectquran</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="<%= params["controller"] %>">
    
    <%= render '/layouts/shared/analytics' %>

    <header>
      <div>
        <%= link_to "The Perfect Quran", root_path, class: "brand" %>
      </div>
      <nav>
        <ul>
          <li><%= link_to "Issues", "https://github.com/imabusabah/perfectquran/issues" %></li>
          <li><%= link_to "API", "https://imabusabah.github.io/perfectquran-documentation/#introduction" %></li>
        </ul>
      </nav>
    </header>

    <main>
    
      <% flash.each do |type, message| %>
        <div class="flash-<%= type %>" role="alert">
          <%= message %>
        </div>
      <% end %>
      
    <% if content_for?(:aside) %>
      <aside>
        <%= yield(:aside) %>
      </aside>
    <% end %>

      <div id="content">
        <%= yield %>
      </div>
    </main>

  </body>
</html>
