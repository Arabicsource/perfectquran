%section
  %h1 General Settings

  = form_with model: current_user, url: settings_general_path, id: 'general-settings-form', local: true do |f|

    = render 'shared/error_messages', object: current_user

    .form-group
      = f.label :name
      = f.text_field :name, id: :user_name, class: 'form-control'

    .form-group
      = f.label :username
      = f.text_field :username, id: :user_username, class: 'form-control'

    = f.submit 'Update Settings', class: 'btn btn-secondary'