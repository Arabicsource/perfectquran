= render 'manage/shared/actions_toolbar', object: Category.new

%section
  %h1 Categories
  
  %table.table
    %thead.thead-default
      %tr
        %th #
        %th Name
    %tbody
      - @categories.each do |category|
        %tr
          %td= category.id
          %td= link_to category.name, manage_category_path(category)
           
- provide :title, 'Categories'