.btn-toolbar

  - unless params[:action].match? 'new'
    .btn-group.mr-2 
      = link_to new_manage_page_path, class: 'btn btn-success' do
        = fa_icon 'plus'
        New Page

  - unless params[:action].match? 'index'
    .btn-group.mr-2
      = link_to manage_pages_path, class: 'btn btn-secondary' do
        = fa_icon 'th-list'
        Index

      - if @page.try :persisted?
        - unless params[:action].match? 'show'
          = link_to manage_page_path(@page), class: 'btn btn-secondary' do
            = fa_icon 'binoculars'
            Show

        - unless params[:action].match? 'edit'
          = link_to edit_manage_page_path(@page), class: 'btn btn-secondary' do
            = fa_icon 'edit'
            Edit

  - if @page.try :persisted?
    .btn-group
      = link_to manage_page_path(@page), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do
        = fa_icon 'trash'
        Delete