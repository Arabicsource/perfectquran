.btn-toolbar

  - except = [] if except.nil?
  
  - unless params[:action].match?('new') or except.include?(:new)
    .btn-group.mr-2
      = link_to [:new, :manage, object.class.to_s.downcase.to_sym], class: 'btn btn-success' do
        = fa_icon 'plus'
        = "New #{object.class}"
  
  .btn-group.mr-2
    - unless params[:action].match? 'index'
      = link_to [:manage, object.class], class: 'btn btn-secondary' do
        = fa_icon 'th-list'
        Index

    - if params[:action].match?('show') and !except.include?(:edit)
      = link_to [:edit, :manage, object], class: 'btn btn-secondary' do
        = fa_icon 'edit'
        Edit

    - if params[:action].match? 'edit'
      = link_to [:manage, object], class: 'btn btn-secondary' do
        = fa_icon 'binoculars'
        Show

  - if params[:action].match? 'show' or params[:action].match? 'edit'
    .btn-group
      = link_to [:manage, object], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do
        = fa_icon 'trash'
        Delete