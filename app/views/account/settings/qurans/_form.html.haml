= form_with model: AccountTranslation.new, method: :post, id: 'quran-translation' do |f|
  .modal{data: {target: 'activity.toggable'}}
    .modal-background
    .modal-card
      %header.modal-card-head
        %p.modal-card-title Add Quran Translation
        %button.delete{aria: {label: "close"}, data: {action: 'activity#toggle'}}
      %section.modal-card-body
        .field
          = f.label :translation, class: 'label'
          .control
            .select.is-fullwidth
              = f.select :translation_id, translation_select_options, {prompt: 'Select...'}

      %footer.modal-card-foot
        = f.submit 'Add Quran Translation', class: 'button is-success'