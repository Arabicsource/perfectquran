= render 'shared/page_header', title: 'Update Payment Method'
= render 'accounts/shared/navbar'

%section.section
  .container
    .columns
      .column.is-two-thirds
        = form_with url: accounts_card_path, method: :patch, id: 'payment_form' do |f|
          #card-errors

          .field
            #card-element.control

          %p.control
            .buttons
              = f.submit 'Update Payment Method', class: 'button is-orange'
              = link_to 'cancel', accounts_subscription_path, class: 'is-cancellation'

- provide :title, 'Update Payment Method'
= javascript_pack_tag 'stripe'