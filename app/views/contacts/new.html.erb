<section class='section'>
  <div class='container'>
    <div class='columns is-centered'>
      <div class='column is-two-thirds'>
        <h1 class='title'>Contact</h1>

        <%= form_with scope: :contact, url: contact_path, method: :post, local: true do |f| %>
          <div class='field'>
            <%= f.label :name, class: 'label' %>
            <%= f.text_field :name, autofocus: true, class: 'input' %>
          </div>

          <div class='field'>
            <%= f.label :email, class: 'label' %>
            <%= f.email_field :email, class: 'input' %>
          </div>

          <div class='field'>
            <%= f.label :body, 'Message', class: 'label' %>
            <%= f.text_area :body, class: 'textarea' %>
          </div>

          <div class='field'>
            <%= f.submit 'Send', class: 'button is-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<% provide :title, 'Contact' %>